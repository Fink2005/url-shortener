{
  "RabbitMq": {
    "Host": "rabbitmq"
  },
  "Jwt": {
    "Issuer": "auth-service",
    "Audience": "url-shortener-clients",
    "Secret": "super_secret_key_for_dev_purposes_only_please_make_this_long_enough_1234567890"
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "POST:/auth/register",
        "Period": "10s",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/auth/login",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "POST:/url/create",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ],
    "EndpointWhitelist": [],
    "ClientWhitelist": [],
    "IpWhitelist": []
  },
  "ReverseProxy": {
    "Routes": {
      "auth": {
        "ClusterId": "auth",
        "Match": { "Path": "/auth/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/auth" }]
      },
      "user": {
        "ClusterId": "user",
        "Match": { "Path": "/users/{**catch-all}" },
        "Transforms": [{ "PathRemovePrefix": "/users" }]
      }
    },
    "Clusters": {
      "auth": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5002/" }
        }
      },
      "user": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5001/" }
        }
      }
    }
  }
}
